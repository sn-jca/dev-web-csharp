@page
@model CarsModel
@{
    ViewData["Title"] = "Flotte de voitures";
}


<div class="container">

<div class="text-center">
    <h1 class="display-4">Flotte de voitures</h1>
    <p>RegineRent@Car</p>
</div>


<button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#addCarModal">
  Ajouter une voiture
</button>

<br>
<br>

<table class="table table-fixed">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Marque</th>
      <th scope="col">Categorie</th>
      <th scope="col">Annee</th>
      <th scope="col">Carburant</th>
      <th scope="col">Disponible</th>
    </tr>
  </thead>
  <tbody>
@foreach (var car in Model.Cars)
{
    
     <tr>
      <th scope="row">@car.Id</th>
      <td>@car.Marque</td>
      <td>@car.Categorie</td>
      <td>@car.Annee</td>
      <td>@car.Carburant</td>
      <td>@car.Disponible</td>
    </tr>

}
  </tbody>
</table>

<!-- Modal Ajout d'une voiture-->
<div class="modal fade" id="addCarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter une Voiture</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST">
            <div class="form-group">
                <label for="idCar">Num√©ro</label>
                <input class="form-control" id="idCar" asp-for="Car.Id"/>
              </div>  
              <div class="form-group">
                <label for="annee">Annee</label>
                <input class="form-control" id="annee" asp-for="Car.Annee"/>
              </div>  
              <div class="form-group">
                <label for="marque">Marque</label>
                <input class="form-control" id="marque" asp-for="Car.Marque"/>
              </div>                
              <div class="form-group">
                <label for="categorie">Categorie</label>
                <input class="form-control" id="categorie" asp-for="Car.Categorie"/>
              </div>   
              <div class="form-group">
                <label for="carburant">Carburant</label>
                <input class="form-control" id="carburant" asp-for="Car.Carburant"/>
              </div>  
              <div class="form-group">
                <label for="dispo">Disponible</label>
                <input type="checkbox" id="dispo" asp-for="Car.Disponible"/>
              </div>                  
    
        <input class="btn btn-primary" type="submit"/>
        </form>

</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</div>

